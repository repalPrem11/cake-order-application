<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:elevation="15dp"
    app:cardCornerRadius="10dp">




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp"
        >


        <TextView
            android:id="@+id/product_namee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="#A95354"
            android:textSize="22dp"
            android:textStyle="bold" />




        <ImageView
            android:id="@+id/product_imagee"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="250dp"
            android:layout_below="@id/product_namee"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="fitCenter" />

       <TextView
            android:id="@+id/product_descriptionn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_imagee"
            android:layout_marginLeft="10dp"
            android:text="Product Description"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="#FF99CC"
           android:layout_centerHorizontal="true"
           android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal"
           android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/product_pricee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_descriptionn"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Product Price"
            android:textColor="#FF99CC"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>



