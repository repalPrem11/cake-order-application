<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF99CC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/input_design2">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="#002F6D"
            android:text="User Name "
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:text="Phone Number "
            android:textColor="#002F6D"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#002F6D"
            android:text="Total Price :"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/order_phone_number"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#002F6D"
            android:text="Order Address,City"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:textStyle="normal"
            android:layout_below="@id/order_total_price"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#002F6D"
            android:text="Date Time"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/order_address"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_cake_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date_time"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="Message on cake"
            android:textColor="#002F6D"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/order_show_all_products_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_cake_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Show this order cake"
            android:textAllCaps="false"
            app:backgroundTint="#002F6D" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/options"
            android:layout_toRightOf="@id/order_show_all_products_btn"
            android:layout_below="@+id/order_cake_message"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"/>


    </RelativeLayout>

</RelativeLayout>